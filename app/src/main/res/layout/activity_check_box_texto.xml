<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkBoxTexto">







    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Volver"
        android:onClick="volverAtras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/fuentePequenaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="12dp"
        android:text="Fuente pequeÃ±a"
        android:onClick="fuenteDiminuta"
        app:layout_constraintBottom_toTopOf="@+id/coloRojoTexto"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/fuenteGrandeTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="12dp"
        android:text="Fuente grande"
        android:onClick="fuenteGigante"
        app:layout_constraintBottom_toTopOf="@+id/fuentePequenaTexto"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/negritaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="13dp"
        android:text="Negrita"
        android:onClick="textoNegrita"
        app:layout_constraintBottom_toTopOf="@+id/fuenteGrandeTexto"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/coloRojoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="161dp"
        android:text="Color rojo"
        android:onClick="fuenteRoja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textoChecks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="68dp"
        android:text="Texto de prueba, las casas son casas. Pero \n hay casas sin casas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>